<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jcarle1025.assignment1b.MainActivity"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/guessNumText"
            android:layout_gravity="center_horizontal"
            android:textColor="#cdc9c9"
            android:textSize="10sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/topText"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="353dp"
            android:id="@+id/gridLayout"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/aButton"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/bButton"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/cButton"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/dButton"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="selectButton" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="E"
                android:id="@+id/eButton"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="selectButton" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/fButton"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="selectButton" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="G"
                android:id="@+id/gButton"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="H"
                android:id="@+id/hButton"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="I"
                android:id="@+id/iButton"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="J"
                android:id="@+id/jButton"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="K"
                android:id="@+id/kButton"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="L"
                android:id="@+id/lButton"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/mButton"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="N"
                android:id="@+id/nButton"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="O"
                android:id="@+id/oButton"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="P"
                android:id="@+id/pButton"
                android:layout_row="4"
                android:layout_column="3"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Q"
                android:id="@+id/qButton"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="selectButton" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="R"
                android:id="@+id/rButton"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/sButton"
                android:layout_row="5"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/tButton"
                android:layout_row="5"
                android:layout_column="3"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="U"
                android:id="@+id/uButton"
                android:layout_row="6"
                android:layout_column="0"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="V"
                android:id="@+id/vButton"
                android:layout_row="6"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="W"
                android:id="@+id/wButton"
                android:layout_row="6"
                android:layout_column="2"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/xButton"
                android:layout_row="6"
                android:layout_column="3"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Y"
                android:id="@+id/yButton"
                android:layout_row="7"
                android:layout_column="0"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Z"
                android:id="@+id/zButton"
                android:layout_row="7"
                android:layout_column="1"
                android:onClick="selectButton"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/resetButton"
                android:layout_row="7"
                android:layout_column="2"
                android:onClick="selectButton"/>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>